{
  "name": "coverage-experiment",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "private": true,
  "scripts": {
    "test": "rm -rf .nyc_output && mkdir .nyc_output && jest",
    "report": "nyc report",
    "cover": "npm test; npm run report",
    "start": "EXPRESS_PORT=3000 pm2 start dist/api/bundle.js",
    "stop": "pm2 delete dist/api/bundle.js",
    "build-api": "rm -rf dist/api && npx webpack build ./src/api/api.ts -o ./dist/api/ --mode production --target node",
    "build-ui": "rm -rf dist/ui && npx webpack build ./src/ui/ui.js -o ./dist/ui/ --mode production",
    "build": "rm -rf dist && npm run build-api && npm run build-ui"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@babel/core": "^7.14.3",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@types/express": "^4.17.12",
    "babel-loader": "^8.2.2",
    "babel-plugin-istanbul": "^6.0.0",
    "html-webpack-plugin": "^5.3.1",
    "jest": "^26.6.3",
    "jest-image-snapshot": "^4.3.0",
    "node-fetch": "^2.6.1",
    "nyc": "^15.1.0",
    "parcel": "^1.12.4",
    "playwright": "^1.8.1",
    "pm2": "^4.5.1",
    "ts-loader": "^9.2.2",
    "typescript": "^4.3.2",
    "uuid": "^8.3.2",
    "webpack": "^5.38.0",
    "webpack-cli": "^4.7.0"
  },
  "nyc": {
    "check-coverage": true,
    "lines": 100
  },
  "jest": {
    "testEnvironment": "node",
    "bail": 1,
    "testTimeout": 10000
  }
}
